<div class='container-fluid'>
  <% if @login_success %>
  <div class='row'>
    <div class='col-md-4 col-md-offset-8'>こんにちは、山田太郎さん  <a href='/mypage'>マイページ </a> <a href='/streaming?logout_success=1'>ログアウト</a></div>
  </div>
  <% end %>
  <div class="page-header">
    <h1>小高区 物件市場 <small>powered by Odaka Hackathon</small></h1>
  </div>
  <div class='row'>
    <div class="col-md-12 ">
      <% if @login_success %>
      <div class="alert alert-success" role="alert">山田　太郎さん でログイン成功しました。</div>
      <% end %>

      <div class='table-responsive'>
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>外見写真</th>
              <th>住所</th>
              <th>面積</th>
              <th>取引区分</th>
              <th>希望価格</th>
              <th>ID</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @akiya.each do |a| %>
            <% if @login_success || a['is_public'] %>
            <% if a['is_public'] == false %>
            <tr class='success'>
              <% else %>
              <tr>
                <% end %>
                <td><img src="<%= asset_path "bank/akiya/#{a['id']}.jpg" %>" alt="" height="100" /></td>
                <td><%= a['address'] %></td>
                <td><%= a['dimensions'] %></td>
                <td><%= a['offer_type'] %></td>
                <td><%= a['price'] %></td>
                <td><%= a['id'] %></td>
                <td><%= button_to "詳しくみる", '/bank/1', :method => "get", :class => 'btn btn-info' %></td>
                <td><%= button_to "問い合わせる", '1/apply', :method => "get", :class => 'btn btn-primary' %></td>
              </tr>
              <% end %>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
